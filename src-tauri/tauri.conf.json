{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "identifier": "ca.eccc.CWA-Viewer",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run vue-dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "CWA-Viewer",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": [
      "../backend/apppy/apppy"
    ],
    "icon": [
      "icons/**/*"
    ],
    "resources": [
      "../backend/apppy/**/*"
    ]
  }
}